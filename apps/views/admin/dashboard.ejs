<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard Admin</title>
    <%- include('layout/head'); -%>
</head>
<body>
<%- include('layout/nav'); -%>

<div class="row">
    <div class="col-md-12">
        <a href="/admin/post/new" class="btn btn-success pull-right">Add New Post</a>
    </div>
</div>



<div class="panel panel-default" style="margin-bottom: 10px;">
    <div class="panel-heading">
        Post Content
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Author</th>
                    <th>Created Time</th>
                    <th>Updated Time</th>
                    <th>Updated Action</th>
                </tr>
                </thead>
                <tbody>
                <% if(data && data.posts) {%>
                    <% for(var i=0;i<data.posts.length;i++){%>
                    <tr>
                        <td><%= data.posts[i].id %></td>
                        <td><%= data.posts[i].title %></td>
                        <td><%= data.posts[i].content%></td>
                        <td><%= data.posts[i].author%></td>
                        <td><%= data.posts[i].created_at%></td>
                        <td><%= data.posts[i].updated_at%></td>
                        <td>
                            <a href="/admin/post/edit/<%= data.posts[i].id %>" class="btn btn-primary">Edit</a>
                            <a href="/admin/post/delete/<%= data.posts[i].id %>" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                    <% }%>
                <% }%>

            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
</body>
</html>